@model GatherUp.Models.Event

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuń wydarzenie</h1>

<h3 class="text-danger">Czy jesteś pewien, że chcesz usunąć to wydarzenie?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @TextUtils.Truncate(Model.Description, 300);
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <div>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Image)
            </dt>
            <dd class="col-sm-10">
                <img style="width: 300px;" src="~/internal-images/@Model.Image"/>
            </dd>
        </div>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Tak, usuń" class="btn btn-danger" /> 
        <a asp-action="Details" asp-route-id="@Model?.Id" class="btn btn-primary">Nie, anuluj</a>
    </form>
</div>
